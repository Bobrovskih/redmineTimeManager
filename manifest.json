{
    "manifest_version": 2,
    "name": "PersonalTime",
    "version": "1.0",
    "description": "Отображает время работы в RM",
    "browser_action":
    {
        "default_popup": "popup.html"
    },
    "permissions": [
        "cookies",
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "icons":
    {
        "16": "ico/icon16.png",
        "48": "ico/icon48.png",
        "128": "ico/icon128.png"
    },
    "background":
    {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "options_ui":
    {
        "page": "options.html",
        "open_in_tab": false
    }
}